{
	"name": "@werstiehltihrdieshow/core",
	"private": true,
	"type": "module",
	"main": "src/index.js",
	"sideEffects": false,
	"exports": {
		"./*": "./src/*.ts"
	},
	"scripts": {
		"studio:dev": "drizzle-kit studio",
		"studio:prod": "dotenvx run -f .env.prod --overload -- drizzle-kit studio",
