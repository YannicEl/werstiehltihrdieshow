		"migrate:prod": "drizzle-kit generate && dotenvx run -f .env.prod --overload -- drizzle-kit migrate",
		"push:dev": "drizzle-kit push"
	},
	"devDependencies": {
		"@total-typescript/tsconfig": "1.0.4",
		"@types/node": "25.0.3",
		"drizzle-kit": "1.0.0-beta.8-734e789"
	},
	"dependencies": {
		"drizzle-orm": "1.0.0-beta.8-734e789",
		"nanoid": "5.1.6"
	}
}
